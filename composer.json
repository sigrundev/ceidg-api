{
    "name": "sigrun/ceidg-api",
    "description": "PHP CEIDG API library",
    "type": "library",
    "require": {
        "php": ">=7.2",
        "ext-soap": "^7.2|^8",
        "ext-SimpleXML": "^7.2|^8"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4@dev",
        "phpunit/phpcov": "^6.0@dev",
        "php-coveralls/php-coveralls": "2.1.x-dev",
        "vlucas/phpdotenv": "^3.4@dev",
        "phpunit/php-code-coverage": "^7.0@dev"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Marek Ognicki",
            "email": "marek@sigrun.eu"
        }
    ],
    "minimum-stability": "dev",
    "autoload":{
      "psr-4": {
        "CeidgApi\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "CeidgApi\\Tests\\": "tests/"
      }
    }
}
